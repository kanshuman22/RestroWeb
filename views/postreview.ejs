<%- include('headeruser') %>

<!-- Page to allow users to post their review-->
<div class="d-flex flex-column justify-content-center align-items-center vh-100" style="margin-top: -50px;">
    <h2 class="mb-4">Post Your Feedback</h2>
    <form action="/revsend" method="post" class="p-4 bg-light rounded" style="width: 80%; max-width: 500px;">
        <div class="mb-3">
            <label for="data" class="form-label">Your Review</label>
            <textarea class="form-control" id="data" name="data" rows="6" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
</div>

